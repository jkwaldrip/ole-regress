# A quick-and-easy script to silently run a full cross-browser regression test on SauceLabs
# and log the output.
require 'fileutils'

FileUtils.mkdir('logs') unless File.directory?('logs')
`rspec -r 'browsers/firefox_helper.rb' -P 'spec/*/*_spec.rb' > logs/#{Time.now.strftime('%Y-%m-%d-%H%M')}-firefox.log`
`rspec -r 'browsers/chrome_helper.rb' -P 'spec/*/*_spec.rb' > logs/#{Time.now.strftime('%Y-%m-%d-%H%M')}-chrome.log`
`rspec -r 'browsers/safari_helper.rb' -P 'spec/*/*_spec.rb' > logs/#{Time.now.strftime('%Y-%m-%d-%H%M')}-safari.log`
`rspec -r 'browsers/ie_helper.rb' -P 'spec/*/*_spec.rb' > logs/#{Time.now.strftime('%Y-%m-%d-%H%M')}-ie.log`

